---
interface Props {
  title: string;
  description: string;
  company: string;
  date: string;
}
const { title, description, company, date } = Astro.props;
---

<div
  class="absolute size-3 bg-gray-200 rounded-full mt-1.5 -start-1.5 border border-white dark:border-gray-900 dark:bg-gray-700">
</div>
<time class="mb-1 text-sm font-normal leading-none text-sky-200/80">
  {date}
</time>
<h3 class="text-md md:text-lg font-semibold text-yellow-200/90 mt-2">
  {title}
</h3>
<h4 class="font-semibold text-md md:text-xl text-gray-200">{company}</h4>
<p class="mb-4 text-base font-normal text-gray-400 text-pretty">
  {description}
</p>
